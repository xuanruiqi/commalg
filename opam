opam-version: "2.0"
name: "coq-commalg"
synopsis: "Commutative algebra in Coq" # One-line description
description: """
  Commutative algebra formalized using SSReflect and packed classes, based on
  the MathComp algebra library.
""" # Longer description, can span several lines

homepage: "https://github.com/xuanruiqi/commalg"
dev-repo: "git+https://github.com/xuanruiqi/commalg.git"
bug-reports: "https://github.com/xuanruiqi/commalg/issues"
maintainer: "me@xuanruiqi.com"
authors: [
  "Xuanrui Qi"
]
license: "MIT" # Make sure this is reflected by a LICENSE file in your sources

depends: [
  "coq" {>= "8.11" & < "8.17~"}
  "coq-mathcomp-ssreflect" {>= "1.11.0" & < "1.16~"}
  "coq-mathcomp-algebra" {>= "1.11.0" & < "1.16~"}
  "coq-mathcomp-classical" {>= "0.6.0"}
]

build: [
  ["coq_makefile" "-f" "_CoqProject" "-o" "Makefile"]
  [make "-j%{jobs}%"]
]
install: [
  [make "install"]
]

tags: [
  "keyword:algebra"
  "keyword:ssreflect"
  "category:Math/Algebra"
  "logpath:commalg"
]
